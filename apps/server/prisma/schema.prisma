generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id        String   @id @default(cuid())

  email     String   @unique
  password  String
  name      String?
  avatarUrl String?
  role      Role     @default(USER)

  apiKeys   ApiKey[]
  strategies Strategy[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  USER
  ADMIN
}

model ApiKey {
  id         String   @id @default(uuid())
  userId     String

  label      String
  exchange   Exchange @default(BINANCE)
  apiKey     String
  apiSecret  String

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  lastUsed   DateTime?
  user       User     @relation(fields: [userId], references: [id])
}

enum Exchange {
  BINANCE
}



model Strategy {
  id           String   @id @default(uuid())
  userId       String

  name         String  
  description  String?  
  interval     String  
  leverage     Int  
  walletRisk   Float 
  config       Json 

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user         User     @relation(fields: [userId], references: [id])
}